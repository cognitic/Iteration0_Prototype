@{
    ViewBag.Title = "UI Component Editor";
    ViewBag.AddButtonLabel = "";
}

<div id="editor">
    <div class="editor-section">
        <div>
            <span class="l"><a id="edit-definition-link" href="/">Edit</a></span><div class="cb"></div>
        </div>
        <div class="editor-definition-wrapper">
            <div class="definition-speech">
                <div id="editor-definition-category" class="context-tag"></div><div id="editor-definition-code" class="req-tag"></div>
                <p id="editor-definition-zone" style="Line-Height:34px; margin-top:8px;"></p>
            </div>
        </div>
    </div>

    <div class="editor-section">
        <div><span class="r"><a id="add-screen-link" href="/">Add +</a></span><h2>Screens</h2></div>
        <div class="underlined-row">
        </div>
        <div id="editor-screens-wrapper">
            <div class="tac"><div class="screenshot">No Screens yet</div></div>
        </div>
    </div>

    <div class="editor-section">
        <div><span class="r"><a id="add-field-link" href="/">Add +</a></span><h2>Fields</h2></div>
        <div class="underlined-row">
        </div>
        <div id="editor-fields-wrapper">            
            <table style="width:100%">
                <thead>
                    <tr>
                        <th>Field</th><th>Type</th><th>Required</th><th>Default</th><th>Validation</th><th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>No Fields yet</td><td>-</td><td>-</td><td></td><td></td><td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="editor-section">
        <div><span class="r"><a id="add-requirement-link" href="/">Add +</a></span><h2>Requirements</h2></div>
        <div class="underlined-row">
        </div>
        <div id="editor-requirements-wrapper">
            <div class="tac">No Requirements yet</div>
        </div>
    </div>


</div>
<script type="text/javascript">
    Iteration0APP.AddControl(new UIComponentEditorUIControl(@Html.Raw(ViewBag.editorVMAsJson)));
</script>

